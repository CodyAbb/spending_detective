
  <p><a href="transactions/new">Add a New Transaction</a></p>
  <br>
  <p>Total Transaction Value: £<%= sprintf('%.2f', @total_transaction_value) %></p>
  <br>

  <div class="transaction-links">
    <p>View by:</p>
    <a href="/transactions/dates">Date</a>
    <a href="/transactions/merchants">Merchant</a>
    <a href="/transactions/tags"></a>
  </div>

  <table>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Merchant</th>
      <th>Spending Tag</th>
      <th>Description</th>
    </tr>
    <% for transaction in @transactions %>
    <tr>
      <td><%= transaction.flip_date(transaction.transaction_date) %></td>
      <td>£<%= sprintf('%.2f', transaction.amount) %></td>
      <td><%= transaction.merchant.name %></td>
      <td><%= transaction.tag.type%></td>
      <td><%= transaction.description%></td>
      <td><a href="/transactions/<%=transaction.id%>/edit">Edit</a></td>
      <td>
        <form action="/transactions/<%= transaction.id %>/delete" method="POST">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
    <% end %>
  </table>
